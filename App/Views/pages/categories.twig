{% extends 'layouts/default.twig' %}

{% block content %}
    <div class="categories">
        <div class="categories-grid">
            {% if categories %}
                {% for category in categories %}
                    <div class="category-element">
                        <div class="category">
                            <div class="category-actions">
                                <div class="category-actions-delete">
                                    <a href="{{ url('categories/' ~ category.id ~ '/delete') }}">
                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                    </a>
                                </div>

                                <div class="category-actions-edit">
                                    <a href="{{ url('categories/' ~ category.id ~ '/edit') }}">
                                        <i class="fa fa-pencil" aria-hidden="true"></i>
                                    </a>
                                </div>
                            </div>

                            <h2 class="category-title">{{ category.title | raw}}</h2>
                            <p class="category-description">{{ excerpt(category.description, 220) | raw}}</p>
                            <span>Created </span><span class="category-creation moment-date">{{ category.created_at | raw}}</span>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <p>No categories to show. Click "Add category" button to create a new one.</p>
            {% endif %}
        </div>

        <div class="main-action main-action-success">
            <a href="{{ url('categories/add') }}" title="Add category"><i class="fa fa-plus" aria-hidden="true"></i></a>
        </div>
    </div>
{% endblock %}


{% block breadcrumb %}
    <a href="{{ url('dashboard') }}" title="Dashboard">Dashboard</a> > <a href="{{ url('categories') }}" title="Categories">Categories</a>
{% endblock %}

{% block extra_scripts %}
    <script src="{{ asset('js/moment.js') }}"></script>
    <script src="{{ asset('js/moment_dates.min.js') }}"></script>
{% endblock %}
