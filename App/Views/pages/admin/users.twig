{% extends 'layouts/default.twig' %}

{% block content %}
    <div class="users">
        <div class="users-grid">
            {% if users %}
                {% for user in users %}
                    <div class="user-element col-md-4">
                        <div class="user">
                            <h2 class="user-username"><a href="users/{{user.id}}">{{ user.username }}</a></h2>
                            <p class="user-email">{{ user.email }}</p>
                            <p class="user-date moment-date">{{ user.created_at }}</p>

                            <div class="user-actions">
                                <div class="user-actions-delete">
                                    <a href="{{ url('admin/users/' ~ user.id ~ '/delete') }}">
                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                    </a>
                                </div>

                                <div class="user-actions-edit">
                                    <a href="{{ url('admin/users/' ~ user.id ~ '/edit') }}">
                                        <i class="fa fa-pencil" aria-hidden="true"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <p>No users to show. Click "Add user" button to create a new one.</p>
            {% endif %}
        </div>

        <div class="main-action main-action-success">
            <a href="{{ url('admin/users/add') }}" title="Add user"><i class="fa fa-plus" aria-hidden="true"></i></a>
        </div>
    </div>
{% endblock %}


{% block breadcrumb %}
    <a href="{{ url('dashboard') }}" title="Dashboard">Dashboard</a> > <a href="{{ url('admin/users') }}" title="Users">Users</a>
{% endblock %}

{% block extra_scripts %}
    <script src="{{ asset('js/moment.js') }}"></script>
    <script src="{{ asset('js/moment_dates.min.js') }}"></script>
{% endblock %}
