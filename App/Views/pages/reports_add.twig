{% extends 'layouts/default.twig' %}

{% block content %}
    {% if errors %}
        <div class="col-md-12">
            <div class="errors">
            {% for error in errors %}
                <p>{{ error }}</p>
            {% endfor %}
            </div>
        </div>
    {% endif %}

    <div class="single-product">
        <form action="#" method="post">
            <div class="col-md-12">
                <div class="card">
                    <div class="form-control">
                        <label for="title">Title</label>
                        <input type="text" name="title" placeholder="Your title" id="title" class="{{ errors.title ? 'errors-border' : '' }}" value="{{ data.title ? data.title : '' }}">
                    </div>
                </div>
            </div>

            <div class="main-action main-action-success">
                <button type="submit" name="submit"><i class="fa fa-check" aria-hidden="true"></i></button>
            </div>
        </form>
    </div>
{% endblock %}

{% block breadcrumb %}
    <a href="{{ url('dashboard') }}" title="Dashboard">Dashboard</a> > <a href="{{ url('reports') }}" title="Reports">Reports</a>
{% endblock %}